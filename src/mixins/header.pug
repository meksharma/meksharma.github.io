include ../mixins/link

mixin header(activeLink)
  header.header
    .header__logo
      a(href="/")
        img(src="/logo.svg")
    nav.header__links-wrapper
      .header__links
        +headerLink('work', '/#work-section', 'Work', activeLink === 'work')
        +headerLink('resume', '/resume.pdf', 'Resume')(target="_blank")
        +headerLink('about', '/about.pug', 'About', activeLink === 'about')


